<%= link_to cocktail_path(cocktail), class: "card-link" do %>
  <div class="card-gradient" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
      <h2><%= cocktail.name %></h2>
  </div>
<% end %>