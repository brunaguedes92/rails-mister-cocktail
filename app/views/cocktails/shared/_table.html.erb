<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Ingredient</th>
      <th scope="col">Description</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @doses.each do |dose| %>
      <tr> 
        <td> <%= dose.ingredient.name %> </td>
        <td> <%= dose.description %> </td>
        <td>
          <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, dose_path(dose), method: "delete", data: { confirm: "Are you sure?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>